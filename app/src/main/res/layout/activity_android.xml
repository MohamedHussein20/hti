<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"

    tools:context=".AndroidActivity">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            >
            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBar"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#001F84"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:text="RouteAppOne"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@id/appBar"
                    app:layout_constraintTop_toTopOf="@id/appBar"
                    />
            </com.google.android.material.appbar.AppBarLayout>

            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:paddingHorizontal="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/android"
                app:layout_constraintTop_toBottomOf="@id/appBar"
                android:layout_marginHorizontal="40dp"
                android:adjustViewBounds="true"
                android:layout_marginBottom="20dp"
                android:id="@+id/img"
                />

            <TextView
                android:id="@+id/part"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="12dp"
                android:paddingStart="30dp"
                android:text="Part 1 ( Java SE )"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img" />

            <TextView
                android:id="@+id/intro"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="12dp"
                android:paddingStart="30dp"
                android:text="1. Introduction to Java"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/part" />

            <TextView
                android:id="@+id/programming"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="12dp"
                android:paddingStart="30dp"
                android:text="Programming"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/intro" />

            <TextView
                android:id="@+id/overview"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="12dp"
                android:paddingStart="30dp"
                android:text="Overview."
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/programming" />

            <TextView
                android:id="@+id/jvm"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="12dp"
                android:paddingStart="30dp"
                android:text="Compiler and JVM"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/overview" />

            <TextView
                android:id="@+id/structure"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="12dp"
                android:paddingStart="30dp"
                android:text="Project Structure"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/jvm" />

            <TextView
                android:id="@+id/hello"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="12dp"
                android:paddingStart="30dp"
                android:text="Hello World Application"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/structure" />

            <TextView
                android:id="@+id/variables"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="12dp"
                android:paddingStart="30dp"
                android:text="Variables and Data types"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hello" />

            <TextView
                android:id="@+id/op"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="12dp"
                android:paddingStart="30dp"
                android:text="Operators"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/variables" />

            <TextView
                android:id="@+id/cond"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="12dp"
                android:paddingStart="30dp"
                android:text="Conditional statements ( IF - Switch )"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/op" />

            <TextView
                android:id="@+id/loops"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="12dp"
                android:paddingStart="30dp"
                android:text="Loops ( For - While - Do While )"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cond" />

            <TextView
                android:id="@+id/basics"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="12dp"
                android:paddingStart="30dp"
                android:text="2. Basics"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/loops" />

            <TextView
                android:id="@+id/nloops"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="12dp"
                android:paddingStart="30dp"
                android:text="Nested Loops"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/basics" />

            <TextView
                android:id="@+id/str"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="12dp"
                android:paddingStart="30dp"
                android:text="Strings"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nloops" />

            <TextView
                android:id="@+id/arr"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="12dp"
                android:paddingStart="30dp"
                android:text="Arrays"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/str" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>